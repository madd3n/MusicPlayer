<MenuContent>:
    ScrollView:
        MDList:
            OneLineListItem:
                text: "List Songs"
                on_release:
                    root.nav_drawer.set_state("close")
                    root.ids.sideMenuOptions.ids.screen_manager.current = "list_songs"
            OneLineListItem:
                text: "Playlist"
                on_release:
                    root.nav_drawer.set_state("close")
                    root.ids.sideMenuOptions.ids.screen_manager.current = "playlist"

